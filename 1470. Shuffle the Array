// leetcode. 1470. Shuffle the Array

class Solution {
    public int[] shuffle(int[] nums, int n) {
        int shuffleArray[]= new int[2*n];
          for(int i = 0 ; i < n ; i++){
              shuffleArray[2*i]= nums[i];
               shuffleArray[2*i + 1]=nums[i+n];

          }
        return  shuffleArray;
    }
}
